{
  "env": {
    "GIT_AUTHOR_NAME": "blue-team[bot]",
    "GIT_AUTHOR_EMAIL": "blue-team@users.noreply.github.com",
    "GIT_COMMITTER_NAME": "blue-team[bot]",
    "GIT_COMMITTER_EMAIL": "blue-team@users.noreply.github.com"
  },
  "inheritEnv": [
    "ANTHROPIC_API_KEY"
  ],
  "mounts": [
    {
      "source": "~/.ssh/blue-team",
      "target": "/root/.ssh/id_ed25519",
      "readOnly": true
    },
    {
      "source": "~/.ssh/blue-team.pub",
      "target": "/root/.ssh/id_ed25519.pub",
      "readOnly": true
    }
  ]
}
